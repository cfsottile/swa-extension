{
  "description": "Adds a sidebar offerin a file picker and drap and drop zone. When an image file is chosen the active tab's body content is replaced with file selected. See https://developer.mozilla.org/en-US/Add-ons/WebExtensions/Examples#imagify",
  "manifest_version": 2,
  "name": "SWA",
  "version": "1.0",
  
  "content_scripts": [
    {
      // "matches": ["*://*.imdb.com/*"],
      "matches": ["*://www.imdb.com/*"],
      "js": ["content_script.js"]
    },
    {
      "matches": ["*://leipert.github.io/*"],
      "js": ["visual_sparql.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://dbpedia.org/sparql?query=*",
    "webRequest"
  ],

  "browser_action": {
    "default_title": "SWA"
  }

  // "sidebar_action": {
  //   "default_title": "SWA",
  //   "default_panel": "sidebar/sidebar.html"
  // }

//   "web_accessible_resources": [
//     "viewer.html"
//   ]
}
